	Title = {Business Process Configuration Wizard and Consistency Checker for BPMN 2.0},
	Type = {conference},
	Url = {http://bpt.hpi.uni-potsdam.de/pub/Public/MatthiasKunze/Rogge-Solti-Business_Process_Configuration_Wizard_and_Consistency_Checker_for_BPMN.pdf},
	Volume = {81},
